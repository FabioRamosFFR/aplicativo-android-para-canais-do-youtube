<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.ListItemContainer">

    <ImageView
        android:id="@+id/iv_icon"
        style="@style/AppTheme.ListItemIcon"
        android:contentDescription="@string/playlist_icon_content_desc"
        android:src="@drawable/ic_playlist_color" />

    <TextView
        android:id="@+id/tv_label"
        style="@style/AppTheme.ListItemMainText"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/iv_icon" />
</RelativeLayout>